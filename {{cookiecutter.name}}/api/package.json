{
  "name": "api",
  "private": true,
  "scripts": {
    "compile": "tsc -p .",
    "copy-schemas": "$(npm bin)/cpx ./src/**/*.graphql ./build/graphql",
    "start:express": "cd build && node app.js",
    "start": "npm run compile && npm run copy-schemas && npm run start:express",
    "prettier": "prettier --config ./.prettierrc.js --write \"src/**/*.ts\"",
    "lint": "eslint --fix . --ext .ts src",
    "test": "mocha tests/unit/"
  },
  "dependencies": {
    "express": "*",
    "aws-serverless-express": "*",
    "body-parser": "*",
    "morgan": "*",
    "@hapi/joi": "*",
    "uuid": "*",
    "helmet": "*",
    "compression": "*",
    "response-time": "*",
    "serve-favicon": "*",
    "apollo-server-express": "^2.9.2",
    "graphql": "^14.5.4",
    "cpx": "^1.5.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "*",
    "@types/aws-serverless-express": "*",
    "@types/body-parser": "*",
    "@types/compression": "*",
    "@types/express": "*",
    "@types/hapi__joi": "*",
    "@types/helmet": "*",
    "@types/morgan": "*",
    "@types/node": "*",
    "@types/response-time": "*",
    "@types/serve-favicon": "*",
    "@types/uuid": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-plugin-prettier": "*",
    "jest": "*",
    "prettier": "*",
    "typescript": "*"
  }
}
