{
    "compilerOptions": {
      "lib": [ "es2018", "dom", "esnext" ],
      "module": "commonjs",
      "target": "es2018",
      "rootDir": "src",
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "strict": true,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ],
    "include": [
      "src/**/*"
    ]
  }
  