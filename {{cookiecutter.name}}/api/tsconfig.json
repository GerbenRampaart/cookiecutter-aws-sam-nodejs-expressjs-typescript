{
    "compilerOptions": {
      "lib": ["es2018", "dom" ],
      "module": "commonjs",
      "target": "es2018",
      "outDir": "build",
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "strict": true,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "noImplicitAny": true
    },
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  